{
  "manifest_version": 3,
  "name": "AuraText Browser Bridge",
  "version": "1.0.2",
  "description": "Enables precise text replacement in browser editors for AuraText",
  
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "https://chatgpt.com/*",
    "https://*.openai.com/*"
  ],
  
  "background": {
    "service_worker": "service-worker.js"
  },
  
  "action": {
    "default_title": "AuraText Bridge"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}