{
  "manifest_version": 2,
  "name": "AuraText Browser Bridge",
  "version": "1.0.0",
  "description": "Enables precise text replacement in browser editors for AuraText",
  
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["service-worker.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "auratext-bridge@auratext.com"
    }
  }
}